<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View android:layout_height="20dp"
        android:layout_width="20dp"
        android:background="@color/colorAccent"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"/>

    <include
        layout="@layout/merge_test"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/parcelableClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="Parcelable Click"
            android:onClick="onParcelClick"/>

        <Button
            android:id="@+id/startServiceClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="Start Service Click"
            android:onClick="onStartServiceClick"/>

        <Button
            android:id="@+id/messengerClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="Messenger Click"
            android:onClick="onMessengerClick"/>

        <Button
            android:id="@+id/aidlAddBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="添加图书"
            android:onClick="onAidlAddBook"/>

        <Button
            android:id="@+id/aidlGetBooks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="获取图书"
            android:onClick="onAidlGetBooks"/>

        <Button
            android:id="@+id/listenNewBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="开始监听新图书"
            android:onClick="listenNewBook"/>

        <Button
            android:id="@+id/unlistenNewBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="停止监听新图书"
            android:onClick="unListenNewBook"/>

        <Button
            android:id="@+id/startSocket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="启动socket测试"
            android:onClick="startSocket"/>

        <Button
            android:id="@+id/binderPoolAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="binder连接池计算加法"
            android:onClick="onBinderPoolAdd"/>

        <Button
            android:id="@+id/binderPoolRect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="binder连接池计算面积"
            android:onClick="onBinderPoolRect"/>

        <Button
            android:id="@+id/circleViewTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="circleview测试"
            android:onClick="onCircleViewTest"/>

        <Button
            android:id="@+id/ndkTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="ndk测试"
            android:onClick="onNdkActivity"/>

`        <Button
            android:id="@+id/asyncTaskTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AsyncTask"
            android:onClick="onAsyncTaskTest"/>

        <Button
            android:id="@+id/jobServiceTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="JobService测试"
            android:onClick="onJobServiceActivity"/>

        <Button
            android:id="@+id/baiduFaceDetect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="百度人脸检测测试"
            android:onClick="onBaiduFaceDetect"/>
    </LinearLayout>
    </ScrollView>
</FrameLayout>